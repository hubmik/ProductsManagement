@model Model.Users

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign In</title>
</head>
<body>
    <div class="center-block">
        @using (Html.BeginForm("Autherize", "Login", FormMethod.Post))
        {
            @Html.TextBoxFor(x => x.Login, new { @class = "form-input", @placeholder = "Login...", @Autocomplete = "off" })
            @Html.ValidationMessageFor(x => x.Login)
            @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Password...", @Autocomplete = "off" })
            @Html.ValidationMessageFor(x => x.Password)
            <input type="submit" name="name" value="Login" />
        }
    </div>
</body>
</html>

@model Model.Customers

@{
    ViewBag.Title = "This is Your Order Summary:";
}

<div class="form-group">
    <label>Company Name</label>
    @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
    <label>Email</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <label>Country</label>
    @Html.TextBoxFor(x => x.Region.Country, new { @class = "form-control" })
    <label>City</label>
    @Html.TextBoxFor(x => x.Region.City, new { @class = "form-control" })
    <label>Street</label>
    @Html.TextBoxFor(x => x.Region.Street, new { @class = "form-control" })
</div>
